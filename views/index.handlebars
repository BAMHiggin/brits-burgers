<h1> Brit's Burgers </h1>

<img src="/public/assets/img/buns.png" alt="buns" class="center"></img>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers devoured=true}}
    {{/if}}
  {{/each}}
</ul>


